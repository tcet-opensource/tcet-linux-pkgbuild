# Maintainer: DemonKiller
# Project: TCET Linux

pkgname=tcet-linux-settings
destname="/etc"
pkgver=23.08
pkgrel=11
pkgdesc="Settings for TCET Linux"
arch=('x86_64')
url="https://github.com/tcet-opensource/tcet-linux-settings"
license=('GPL3')
makedepends=('git')

depends=('xfce4-terminal' 'thunar' 'firefox' 'xfce4-whiskermenu-plugin' 'tela-circle-icon' 'tcet-linux-qogir-theme')

optdepends=('paru: an AUR helper'
            'neofetch: screenfetch utility'
            'cups: printing support'
            'system-config-printer: CUPS status applet'
            'blueman: bluetooth manager')
conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=("$pkgname".tar.gz::"${url}"/releases/download/latest/"${pkgname}".tar.gz)
sha256sums=('SKIP')

package() {
	install -dm755 ${pkgdir}${destname}
	cp -r ${srcdir}/${destname}/* ${pkgdir}${destname}
}
