#calamares PKGBUILD for TCET Linux Installer

pkgname=calamares
pkgver=3.2.62
pkgdesc='Distribution-independent installer framework'
arch=('x86_64')
pkgname1=calamares-desktop
destname="/etc/skel/Desktop/"
url="https://github.com/tcet-opensource/calamares-desktop"
license=('GPL3')
makedepends=('git')

conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=("$pkgname1".tar.gz::"${url}"/releases/download/latest/"${pkgname1}".tar.gz)
sha256sums=('dd7b46a2d4e1baad0f98ac391b26f42b6452d7c4bf6ec2047fec35ef7e01e8f7')

package() {

    install -dm755 ${pkgdir}${destname}/
    cp -r ${srcdir}/${pkgname1}/calamares.desktop ${pkgdir}${destname}/

}
