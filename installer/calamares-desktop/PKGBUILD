# Maintainer: Akash6222
# Project: TCET Linux

pkgname=calamares-desktop
destname="/etc/skel/Desktop/"
pkgver=23.08
pkgrel=3
pkgdesc="Calamares Desktop"
arch=('x86_64')
url="https://github.com/tcet-opensource/calamares-desktop"
license=('GPL3')
makedepends=('git')

conflicts=()
provides=("${pkgname}")
options=(!strip !emptydirs)
source=("$pkgname".tar.gz::"${url}"/releases/download/latest/"${pkgname}".tar.gz)
sha256sums=('SKIP')

package() {

	install -dm755 ${pkgdir}${destname}/
	cp -r ${srcdir}/calamares.desktop ${pkgdir}${destname}/

}
